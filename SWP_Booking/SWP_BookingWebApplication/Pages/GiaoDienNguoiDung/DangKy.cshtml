@page
@model DangKyModel
@{
    ViewData["Title"] = "Privacy Policy";
}
<html>

<head>
    <title>Official Signup Form</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>

<body style="margin: 0; padding: 0; font-family: Arial, sans-serif; background-color: #333;">
    <div style="width: 100%; height: 100vh; display: flex; justify-content: center; align-items: center; background: rgba(0, 0, 0, 0.5);">
        <div style="width: 800px; display: flex; background: rgba(0, 0, 0, 0.7); border-radius: 10px; overflow: hidden;">
            <div style="width: 50%; display: flex; flex-direction: column; justify-content: center; align-items: center; color: white; padding: 20px; background-color: #444;">
                <img src="/img/ảnh trong.jpeg" alt="Placeholder Image"
                     style="width: 100%; border-radius: 10px; margin-bottom: 20px;">
                <h1 style="font-size: 36px; margin: 0;">OFFICIAL</h1>
                <p style="font-size: 14px; margin: 10px 0 0;">
                    Rất đau đớn nhưng sẽ thành công
                </p>
            </div>
            <div style="width: 50%; padding: 40px; display: flex; flex-direction: column; justify-content: center; background: #333;">
                <input type="text" placeholder="First Name"
                       style="width: 100%; padding: 10px; margin: 10px 0; border: none; border-bottom: 2px solid #555; background: transparent; color: white; font-size: 16px;">
                <input type="email" placeholder="mail@example.com"
                       style="width: 100%; padding: 10px; margin: 10px 0; border: none; border-bottom: 2px solid #555; background: transparent; color: white; font-size: 16px;">
                <input type="password" placeholder="Password"
                       style="width: 100%; padding: 10px; margin: 10px 0; border: none; border-bottom: 2px solid #555; background: transparent; color: white; font-size: 16px;">
                <input type="password" placeholder="Confirm Password"
                       style="width: 100%; padding: 10px; margin: 10px 0; border: none; border-bottom: 2px solid #555; background: transparent; color: white; font-size: 16px;">
                <button style="width: 100%; padding: 10px; margin: 20px 0; border: none; background: #007bff; color: white; font-size: 16px; cursor: pointer;">
                    Đăng Ký
                </button>
                <p style="color: white; text-align: center;">Đăng ký nhanh với hồ sơ xã hội yêu thích của bạn</p>
                <div style="display: flex; justify-content: center; margin-top: 20px;">
                    <a href="#" style="color: white; font-size: 20px; margin: 0 10px; text-decoration: none;">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" style="color: white; font-size: 20px; margin: 0 10px; text-decoration: none;">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" style="color: white; font-size: 20px; margin: 0 10px; text-decoration: none;">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                    <a href="#" style="color: white; font-size: 20px; margin: 0 10px; text-decoration: none;">
                        <i class="fab fa-google-plus-g"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div style="text-align: center; color: white; margin-top: 20px; font-size: 12px;">
    </div>
</body>

</html>